import React from 'react';
import { StyleSheet, View } from 'react-native';
import { Text, useTheme, Checkbox } from 'react-native-paper';
import { format, isPast } from 'date-fns';
import { Goat, Task } from '@/models';
import { useAppDispatch } from '@/store/hooks';
import { updateTaskStatus } from '@/store/slices/tasksSlice';

type TaskListItemProps = {
  task: Task;
  goat?: Goat;
};

export default function TaskListItem({ task, goat }: TaskListItemProps) {
  const { colors } = useTheme();
  const dispatch = useAppDispatch();

  const isOverdue = isPast(new Date(task.dueDate)) && task.status === 'Pending';
  const isCompleted = task.status === 'Completed';

  const handleToggleStatus = () => {
    const newStatus = isCompleted ? 'Pending' : 'Completed';
    dispatch(updateTaskStatus({ id: task.id, status: newStatus }));
  };

  return (
    <View style={[styles.card, { backgroundColor: colors.surface, opacity: isCompleted ? 0.6 : 1 }]}>
      <Checkbox.Android
        status={isCompleted ? 'checked' : 'unchecked'}
        onPress={handleToggleStatus}
        color={colors.primary}
      />
      <View style={styles.content}>
        <Text style={[styles.title, { color: colors.text, textDecorationLine: isCompleted ? 'line-through' : 'none' }]}>
          {task.title}
        </Text>
        {goat && (
            <Text style={[styles.goatName, { color: colors.primary }]}>{goat.name}</Text>
        )}
        <Text style={[styles.dueDate, { color: isOverdue ? colors.error : colors.textSecondary }]}>
          Due: {format(new Date(task.dueDate), 'MMM d, yyyy')}
        </Text>
      </View>
    </View>
  );
}

const styles = StyleSheet.create({
  card: {
    flexDirection: 'row',
    alignItems: 'center',
    marginBottom: 12,
    paddingHorizontal: 8,
    paddingVertical: 12,
    borderRadius: 12,
  },
  content: {
    flex: 1,
    marginLeft: 8,
  },
  title: {
    fontFamily: 'Inter_600SemiBold',
    fontSize: 16,
  },
  goatName: {
    fontFamily: 'Inter_600SemiBold',
    fontSize: 12,
    marginTop: 2,
  },
  dueDate: {
    fontFamily: 'Inter_400Regular',
    fontSize: 12,
    marginTop: 4,
  },
});
