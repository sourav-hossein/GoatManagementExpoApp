import React, { useCallback } from 'react';
import { FlatList, StyleSheet, View, RefreshControl } from 'react-native';
import { Appbar, FAB, useTheme } from 'react-native-paper';
import { useRouter } from 'expo-router';
import { SafeAreaView } from 'react-native-safe-area-context';

import { useAppSelector, useAppDispatch } from '@/store/hooks';
import { fetchHealthRecords } from '@/store/slices/healthSlice';
import EmptyState from '@/components/EmptyState';
import HealthRecordListItem from '@/components/HealthRecordListItem';

export default function HealthScreen() {
  const { colors } = useTheme();
  const router = useRouter();
  const dispatch = useAppDispatch();
  const { records, status } = useAppSelector((state) => state.health);
  const { goats } = useAppSelector((state) => state.goats);
  const refreshing = status === 'loading';

  const onRefresh = useCallback(() => {
    dispatch(fetchHealthRecords());
  }, [dispatch]);

  const goatMap = new Map(goats.map(g => [g.id, g]));

  return (
    <SafeAreaView style={[styles.container, { backgroundColor: colors.background }]}>
      <Appbar.Header style={{ backgroundColor: colors.background, elevation: 0 }}>
        <Appbar.Content title="Health Records" titleStyle={{ fontFamily: 'Inter_700Bold', fontSize: 24, color: colors.text }} />
      </Appbar.Header>
      <FlatList
        data={records}
        keyExtractor={(item) => item.id}
        renderItem={({ item }) => (
          <HealthRecordListItem record={item} goat={goatMap.get(item.goatId)} />
        )}
        contentContainerStyle={styles.list}
        refreshControl={<RefreshControl refreshing={refreshing} onRefresh={onRefresh} tintColor={colors.primary} />}
        ListEmptyComponent={
          <EmptyState
            title="No Health Records"
            message="Add your first health record using the '+' button."
          />
        }
      />
      <FAB
        icon="plus"
        style={[styles.fab, { backgroundColor: colors.primary }]}
        onPress={() => router.push('/add-health-record')}
        color="#FFFFFF"
      />
    </SafeAreaView>
  );
}

const styles = StyleSheet.create({
  container: { flex: 1 },
  list: { paddingHorizontal: 16, paddingBottom: 80, flexGrow: 1 },
  fab: {
    position: 'absolute',
    margin: 16,
    right: 0,
    bottom: 0,
  },
});
